# ---------- BUILD STAGE ----------
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# 1. Copy the solution and ALL project files first (for efficient caching)
COPY *.sln ./
COPY poolUpBackend.csproj ./
# Copy other project files if they exist in your subfolders
COPY src/Application/*.csproj ./src/Application/
COPY src/Core/*.csproj ./src/Core/
COPY src/Infrastructure/*.csproj ./src/Infrastructure/

# 2. Restore dependencies
RUN dotnet restore

# 3. Copy everything else
COPY . .

# 4. Build and Publish
# We run this from the root where the .csproj is
RUN dotnet publish "poolUpBackend.csproj" -c Release -o /app/publish /p:UseAppHost=false

# ---------- RUNTIME STAGE ----------
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS final
WORKDIR /app

# Copy the published files from the build stage
COPY --from=build /app/publish .

# Expose the port
EXPOSE 8080
ENV ASPNETCORE_URLS=http://+:8080

ENTRYPOINT ["dotnet", "poolUpBackend.dll"]