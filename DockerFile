# ---------- BUILD ----------
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy the solution first
COPY *.sln ./

# Copy the project files for restore
COPY src/Api/*.csproj ./src/Api/

# Restore only the project/solution
RUN dotnet restore

# Copy the rest of the source
COPY . .

# Set working directory to the API folder
WORKDIR /src/src/Api

# Publish the app
RUN dotnet publish -c Release -o /app

# ---------- RUNTIME ----------
FROM mcr.microsoft.com/dotnet/aspnet:8.0
WORKDIR /app
COPY --from=build /app .

ENV ASPNETCORE_URLS=http://+:8080
EXPOSE 8080

ENTRYPOINT ["dotnet", "poolUpBackend.dll"]
